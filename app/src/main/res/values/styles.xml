<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Theme for activities with no ActionBar-->
    <style name="NoActionBar" parent="Theme.AppCompat.Light.NoActionBar" />

    <style name="LoginFieldsStyle">
        <item name="android:background">@drawable/login_fields_bg</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textColorHint">@color/colorWhite</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="LoginButtonStyle">
        <item name="android:background">@drawable/login_button_background</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="SignupButtonStyle">
        <item name="android:background">@drawable/signup_button_background</item>
        <item name="android:textColor">@color/colorGreenLight</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="PhoneNumberFieldsStyle">
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textColorHint">@color/colorWhite</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:inputType">phone</item>
    </style>

    <style name="CodeVerificationFieldStyle">
        <item name="android:background">@drawable/code_verification_fields_bg</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textColorHint">@color/colorWhite</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:inputType">number</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLength">6</item>
    </style>

    <style name="VerifyCodeButtonStyle">
        <item name="android:background">@drawable/signup_button_background</item>
        <item name="android:textColor">@color/colorGreenMedium</item>
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="UserNameFieldStyle">
        <item name="android:background">@drawable/green_medium_strock_bg</item>
        <item name="android:textColor">@color/colorGreenLight</item>
        <item name="android:textColorHint">@color/colorGreenLight</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">textCapCharacters</item>
        <item name="android:maxLength">12</item>
    </style>

    <style name="ForgetPasswordButtonStyle">
        <item name="android:background">@drawable/forget_password_button_bg</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ForgetPasswordCounterTextStyle" parent="TextAppearance.Design.Counter">
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textColor">@color/colorGreenLight</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="WhatsYourNameTextStyle" parent="TextAppearance.Design.Counter">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/colorGreenLight</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="ForgetPasswordItsOkayTextStyle" parent="TextAppearance.Design.Counter">
        <item name="android:textSize">@dimen/_19sdp</item>
        <item name="android:textColor">@color/colorGreenDark</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ForgetPasswordCodeInstructsTextStyle" parent="TextAppearance.Design.Counter">
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:textColor">@color/colorGreenLight</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ForgetPasswordFieldStyle">
        <item name="android:background">@drawable/green_light_strock_bg</item>
        <item name="android:textColor">@color/colorGreenLight</item>
        <item name="android:textColorHint">@color/colorGreenLight</item>
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CurrentLocationTextStyle">
        <item name="android:drawableStart">@drawable/ic_map_marker</item>
        <item name="android:drawableLeft">@drawable/ic_map_marker</item>
        <item name="android:drawablePadding">@dimen/_4sdp</item>
        <item name="android:textColor">@color/colorGreenLight</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CompleteTextStyle">
        <item name="android:drawableStart">@drawable/ic_user</item>
        <item name="android:drawableLeft">@drawable/ic_user</item>
        <item name="android:drawablePadding">@dimen/_4sdp</item>
        <item name="android:textColor">@color/colorGreenLight</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TopDealsTextStyle">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="GridItemsTextStyle">
        <item name="android:textColor">@color/colorGreenLight</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="NoActionBarDark" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
